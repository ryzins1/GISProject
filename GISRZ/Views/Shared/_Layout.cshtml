<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top" style="margin-bottom: 15px;">
		<div class="masthead col-md-4">
			<img src="~/Images/logo-bepc-header.png" />
		</div>
		<div class="pull-right col-md-8 collapse in" id="Bar">

			@*<a href="#Foo" class="btn btn-default" data-toggle="collapse">Toggle Foo</a>
				<button href="#Bar" class="btn btn-default" data-toggle="collapse">Toggle Bar</button>*@

			@*<div id="Bar" class="collapse in">
					This div (Bar) is shown by default and can toggle
				</div>*@
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					@*@Html.ActionLink("GIS", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})*@
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li class="dropdown">
							<a data-toggle="dropdown" class="dropdown-toggle" href="#">AVS <b class="caret"></b></a>
							<ul role="menu" class="dropdown-menu">
								<li><a href="http://gis.bepc.net/AVS_RawWaterLines/">Raw Water Lines</a></li>
							</ul>
						</li>
						<li class="dropdown">
							<a data-toggle="dropdown" class="dropdown-toggle" href="#">LRS <b class="caret"></b></a>
							<ul role="menu" class="dropdown-menu">
								<li><a href="http://gis.bepc.net/LRSJ/">Johnson Wells and Raw Water Lines</a></li>
							</ul>
						</li>
						<li class="dropdown">
							<a data-toggle="dropdown" class="dropdown-toggle" href="#">LOS/GHM <b class="caret"></b></a>
							<ul role="menu" class="dropdown-menu">
								<li><a href="http://gis.bepc.net/LOSF/">Site Facilities</a></li>
							</ul>
						</li>
						<li class="dropdown">
							<a data-toggle="dropdown" class="dropdown-toggle" href="#">TSM <b class="caret"></b></a>
							<ul role="menu" class="dropdown-menu">
								<li><a href="http://gis.bepc.net/tsmline/">Lines</a></li>
								<li><a href="http://gis.bepc.net/sitelocation/">Site Location Map</a></li>
								<li><a href="http://gis.bepc.net/tracker">Aerial Patrols</a></li>
							</ul>
						</li>
						<li class="dropdown">
							<a data-toggle="dropdown" class="dropdown-toggle" href="#">Telecommunications <b class="caret"></b></a>
							<ul role="menu" class="dropdown-menu">
								<li><a href="http://gis.bepc.net/avl/index.php">AVL</a></li>
								<li><a href="http://gis.bepc.net/CommSystem/">Communications System</a></li>
								<li><a href="http://gis.bepc.net/microwavesite/">Microwave Site</a></li>
								<li><a href="http://gis.bepc.net/radiofrequency/">Radio Frequency</a></li>
							</ul>
						</li>
						<li class="dropdown">
							<a data-toggle="dropdown" class="dropdown-toggle" href="#">Engineering Projects <b class="caret"></b></a>
							<ul role="menu" class="dropdown-menu">
								<li><a href="http://gis.bepc.net/ConstructionCurOngoing/">Transmission Projects</a></li>
							</ul>
						</li>
					</ul>
					@Html.Partial("_LoginPartial")
				</div>
			</div>
		</div>
	</div>
	<div class="container body-content" style="margin-top: 35px;">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
